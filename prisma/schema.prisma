// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Topping {
  id    String @id @default(uuid())
  name  String
  price Int
  Food  Food[]
}

model Filling {
  id    String @id @default(uuid())
  name  String
  price Int
  foods Food[]
}

model Food {
  id       String    @id @default(uuid())
  name     String
  price    Int
  toppings Topping[]
  fillings Filling[]
}
